# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES FOR RENDER.COM DEPLOYMENT
# =============================================================================
# Copy this file to your Render.com environment variables section
# DO NOT commit actual values to git

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_bot_token_here

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL on Render)
# =============================================================================
# Render.com provides DATABASE_URL automatically for PostgreSQL addon
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@host:port/database

# Optional individual database settings (will be ignored if DATABASE_URL is set)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=creative_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# =============================================================================
# KEITARO API CONFIGURATION
# =============================================================================
KEITARO_BASE_URL=https://your-keitaro-instance.com
KEITARO_API_TOKEN=your_keitaro_api_token

# =============================================================================
# GOOGLE SERVICES CONFIGURATION
# =============================================================================
GOOGLE_PROJECT_ID=your_google_project_id
# Google Service Account JSON as string (for Render.com)
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}
GOOGLE_DRIVE_ROOT_FOLDER_ID=your_drive_folder_id
GOOGLE_SHEETS_MANIFEST_ID=your_sheets_manifest_id

# Google OAuth for user authorization
GOOGLE_OAUTH_CLIENT_ID=your_oauth_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_oauth_client_secret
GOOGLE_OAUTH_REDIRECT_URI=https://creative-keitaro-bot.onrender.com/auth/google/callback

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=production
LOG_LEVEL=INFO
TZ=Europe/Moscow

# Secret key for sessions (generate random string)
SECRET_KEY=your_super_secret_key_here

# =============================================================================
# USER WHITELIST (Initial Users)
# =============================================================================
# Format: telegram_id:role:buyer_id,telegram_id:role:buyer_id
# Roles: owner, head, teamlead, buyer, bizdev, finance
# Example: 123456789:owner:,987654321:buyer:n1
ALLOWED_USERS=your_telegram_id:owner:

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================
# Redis (optional, uses memory storage if not provided)
REDIS_URL=redis://localhost:6379/0

# API settings
API_HOST=0.0.0.0
API_PORT=8000

# File upload limits
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=jpg,jpeg,png,mp4,mov

# Cache settings
CACHE_TTL_SECONDS=120
CACHE_TTL_REPORTS=300

# Worker settings
WORKER_CONCURRENCY=4

# Limits
MAX_CREATIVES_PER_GEO_PER_DAY=999
MAX_EXPORT_ROWS=100000

# Digest settings
DIGEST_HOUR=10
DIGEST_MINUTE=0

# =============================================================================
# CREATIVE DUPLICATION SETTINGS (Optional)
# =============================================================================
# Channel ID for duplicating creatives (main bot sends directly)
# Leave empty to disable duplication
CREATIVE_STORAGE_CHANNEL_ID=-1001234567890

# =============================================================================
# SUBSCRIPTION REQUIREMENTS (Optional)
# =============================================================================
# Required channel subscription for upload access
# Leave empty to disable subscription requirement
REQUIRED_CHANNEL_ID=-1002952105219
REQUIRED_CHANNEL_USERNAME=your_channel_username